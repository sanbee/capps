# Pattern rules.
#---------------
%.pdf : $(CODEDIR)/%.xml $(CASAXSLTDIR)/casa2tlatex.xsl
	@ trap "$(RM) $(ARCHTMPD)/$*gcode" 1 2 3 15 ; \
	amkdir pdf_files ;\
        cat $(AIPSROOT)/code/install/docutils/tmpheader4tex >  pdf_files/$(@F:%.pdf=%.latex); \
	TEXINPUTS=.:$(AIPSCODE)/doc/texinputs.dir:$(TEXINPUTS) ;\
        $(SAXON) $<  $(AIPSROOT)/code/xmlcasa/install/casa2tlatex.xsl | sed -e "s/<?xml version.*//" | awk -f $(AIPSROOT)/code/install/docutils/xml2latex.awk >>  pdf_files/$(@F:%.pdf=%.latex); \
	cat $(AIPSROOT)/code/install/docutils/tmptail4tex >>  pdf_files/$(@F:%.pdf=%.latex); \
	cd pdf_files ; \
	echo "$(htmlFLATEX) $(@F:%.pdf=%.latex)" ; \
	echo "(1st pass)..." ; \
	$(PDFLATEX) $(@F:%.pdf=%.latex); \
	echo "(2nd pass)..." ; \
	$(PDFLATEX) $(@F:%.pdf=%.latex); \
	echo "(3rd pass)..." ; \
	$(PDFLATEX) $(@F:%.pdf=%.latex)

%.html : $(CODEDIR)/%.xml $(CASAXSLTDIR)/casa2tlatex.xsl
	@ trap "$(RM) $(ARCHTMPD)/$*gcode" 1 2 3 15 ; \
        amkdir htmlfiles ;\
        cat $(AIPSROOT)/code/install/docutils/tmpheader4tex >  htmlfiles/$(@F:%.html=%.latex); \
	TEXINPUTS=.:$(AIPSCODE)/doc/texinputs.dir:$(TEXINPUTS) ;\
        $(SAXON) $<  $(AIPSROOT)/code/xmlcasa/install/casa2tlatex.xsl | sed -e "s/<?xml version.*//" | awk -f $(AIPSROOT)/code/install/docutils/xml2latex.awk >>  html_files/$(@F:%.pdf=%.latex); \
	cat $(AIPSROOT)/code/install/docutils/tmptail4tex >>  htmlfiles/$(@F:%.html=%.latex); \
	cd htmlfiles ; \
	echo "$(HTLATEX) $(@F:%.html=%.latex)" ; \
	echo "(1st pass)..." ; \
	$(HTLATEX) $(@F:%.html=%.latex); \
	echo "(2nd pass)..." ; \
	$(HTLATEX) $(@F:%.html=%.latex); \
	echo "(3rd pass)..." ; \
	$(HTLATEX) $(@F:%.html=%.latex)

$(DOCSAREA)/helpfiles/%.htex : $(CODEDIR)/%.xml $(CASAXSLTDIR)/casa2tlatex.xsl
	@ trap "$(RM) $(ARCHTMPD)/$*gcode" 1 2 3 15 ; \
          $(SAXON) $<  $(AIPSROOT)/code/xmlcasa/install/casa2tlatex.xsl | sed -e "s/<?xml version.*//" | awk -f $(AIPSROOT)/code/install/docutils/xml2latex.awk | sed -e "s/\\\'/\'/g" > $(DOCSAREA)/helpfiles/$(notdir $(basename $<)).htex
	@ chmod 664  $(DOCSAREA)/helpfiles/$(notdir $(basename $<)).htex
	@ touch $(AIPSROOT)/code/doc/taskref/TaskRef.dir

