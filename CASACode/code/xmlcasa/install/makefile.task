tasklist :  $(CODEDIR)/*.xml
	cp /dev/null $(ARCHTMPD)/tasklist
	echo "from odict import odict" >> $(ARCHTMPD)/tasklist
	echo "tlist = odict()" >> $(ARCHTMPD)/tasklist
	for task in *.xml ; do \
	$(SAXON) $$task  $(AIPSROOT)/code/xmlcasa/install/casatlist.xsl >> $(ARCHTMPD)/tasklist ; \
	done 
	echo >> $(ARCHTMPD)/tasklist
	cat $(ARCHTMPD)/tasklist

pytasks : $(AIPSARCH)/python/$(PYTHONVER)/tasks.py

$(AIPSARCH)/python/$(PYTHONVER)/tasks.py :  $(CODEDIR)/*.xml
	cp /dev/null $(ARCHTMPD)/taskinfo
	amkdir $(DOCSAREA)/helpfiles
	cp /dev/null $(DOCSAREA)/helpfiles/tasksref.htex
	for task in *.xml ; do \
	$(SAXON) $$task  $(AIPSROOT)/code/xmlcasa/install/casa2tsum2.xsl >> $(ARCHTMPD)/taskinfo ; \
	echo "\\input{$${task%.xml}.htex}" >> $(DOCSAREA)/helpfiles/tasksref.htex ; \
	done 
	echo >> $(ARCHTMPD)/taskinfo
	echo "from tget import *" >> $(ARCHTMPD)/taskinfo
	echo "from taskmanager import tm" >> $(ARCHTMPD)/taskinfo
	grep "^from" $(ARCHTMPD)/taskinfo > $(AIPSARCH)/python/$(PYTHONVER)/tasks.py
	echo "from odict import odict" > $(AIPSARCH)/python/$(PYTHONVER)/tasksinfo.py
	echo "mytasks = odict()" >> $(AIPSARCH)/python/$(PYTHONVER)/tasksinfo.py
	echo "tasksum = odict()" >> $(AIPSARCH)/python/$(PYTHONVER)/tasksinfo.py
	egrep -v "^#?from" $(ARCHTMPD)/taskinfo >> $(AIPSARCH)/python/$(PYTHONVER)/tasksinfo.py
	chmod 664 $(AIPSARCH)/python/$(PYTHONVER)/tasks.py
	chmod 664 $(AIPSARCH)/python/$(PYTHONVER)/tasksinfo.py

$(CGENXTIME)(%.xml) : $(CGENXTIME) $(AIPSARCH)/python/$(PYTHONVER)/%.py $(CODEDIR)/%.xml $(AIPSARCH)/python/$(PYTHONVER)/%_cli.py $(AIPSARCH)/python/$(PYTHONVER)/%_pg.py

