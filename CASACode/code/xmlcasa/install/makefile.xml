# AIPS++ fundamentals.
#---------------------
AIPSROOT := $(word 1, $(CASAPATH))
AIPSARCH := $(AIPSROOT)/$(word 2, $(CASAPATH))
include $(AIPSARCH)/makedefs
AIPSGCODE := $(AIPSROOT)/gcode_$(word 2, $(CASAPATH))

# Do not include template source files.
#--------------------------------------
#CPPOPT += -DAIPS_NO_TEMPLATE_SRC
#CPPDBG += -DAIPS_NO_TEMPLATE_SRC

# Package subdirectories.
#------------------------
PCKGINST := $(CODEDIR)/install
PCKGIMPD := $(CODEDIR)/implement
PCKGFTND := $(CODEDIR)/fortran
PCKGAPSD := $(CODEDIR)/apps
PCKGXMLD := $(CODEDIR)/xml

MAKEINST := $(filter $(PCKGINST), $(CODESUBS))
MAKEIMPD := $(filter $(PCKGIMPD), $(CODESUBS))
MAKEFTND := $(filter $(PCKGFTND), $(CODESUBS))
MAKEAPSD := $(filter $(PCKGAPSD), $(CODESUBS))
MAKEXMLD := $(filter $(PCKGXMLD), $(CODESUBS))

MAKEAUXD := $(filter-out $(PCKGINST) $(PCKGIMPD) $(PCKGFTND) $(PCKGAPSD) $(PCKGXMLD), $(CODESUBS))

PYSHAREDOBJ := $(AIPSARCH)/python/$(PYTHONVER)/casac.so


# Static and static pattern rules.
#---------------------------------
.PHONY : bin lib pythonlib version

allsys : $(MAKEINST) framework $(MAKEAUXD) $(MAKEFTND) $(MAKEIMPD) $(MAKEAPSD) $(MAKEXMLD) $(PYSHAREDOBJ) updatelib casac

.cleansys ::
	-$Q $(RM) -r $(ARCHTMPD)/$(PACKAGE)
	$(RM) -r $(AIPSGCODE)/$(ARCH) $(AIPSGCODE)/*.idl $(AIPSGCODE)/*.xml
	$(RM) -rf  $(AIPSARCH)/python/$(PYTHONVER)

lib : $(MAKEIMPD) $(MAKEFTND) ;

pythonlib : $(MAKEXMLD) ;

bin : $(MAKEAPSD) ;

docscan docextr runtests :
	-@ if [ "$Q" != "@" -o "$(MAKELEVEL)" = 0 ] ; then \
	      echo "" ; \
	      echo gmake[$(MAKELEVEL)]: $(MAKE) -C $(CODEDIR)/implement $@ ; \
	   else \
	      echo $@[$(MAKELEVEL)]:"$(MAKEINDENT)"implement ; \
	   fi
	 @ $(MAKE) -C implement NODEP=1 $@ 

gencode helpfiles :
	-@ if [ "$Q" != "@" -o "$(MAKELEVEL)" = 0 ] ; then \
	      echo "" ; \
	      echo gmake[$(MAKELEVEL)]: $(MAKE) -C $(CODEDIR)/tasks $@ ; \
	      echo gmake[$(MAKELEVEL)]: $(MAKE) -C $(CODEDIR)/tools $@ ; \
	   else \
	      echo $@[$(MAKELEVEL)]:"$(MAKEINDENT)"tools ; \
	   fi
	   @ if [ -d $(CODEDIR)/tools ] ; then \
	       $(MAKE) -C tools NODEP=1 $@  ;\
           fi
	   @ if [ -d $(CODEDIR)/tasks ] ; then \
	       $(MAKE) -C tasks NODEP=1 $@  ; \
           fi


updatelib :
	@ cd $(AIPSGCODE)/Python_Converter ; \
        $(PYTHON) setup.py build ; \
        amkdir $(AIPSARCH)/python/$(PYTHONVER) ; \
        cp build/lib*/casac.so $(AIPSARCH)/python/$(PYTHONVER)

casac :
	@ cd $(AIPSGCODE)/Python_Converter ; \
	rm build/lib*/casac.so ; \
        $(PYTHON) setup.py build ; \
        amkdir $(AIPSARCH)/python/$(PYTHONVER) ; \
        cp build/lib*/casac.so $(AIPSARCH)/python/$(PYTHONVER)

componentslib :
	@ cd $(AIPSGCODE) ;\
	$(CCMTOOLSBIND)/ccmtools c++local c++python --overwrite --coda=$(AIPSXMLCODE)/xml/conversions.xml -o $(AIPSGCODE) -I$(AIPSGCODE) $(AIPSGCODE)/casa*.idl ;\
        mksetupdotpy.sh casac; \
        cd $(AIPSGCODE)/Python_Converter ; \
        $(PYTHON) setup.py build ; \
        amkdir $(AIPSARCH)/python/$(PYTHONVER) ; \
        cp build/lib*/casac.so $(AIPSARCH)/python/$(PYTHONVER)/casac.so

framework : 
	@ amkdir -p ug=rwx,g+s,o=rx -v $(AIPSGCODE)
	$(MAKE) -C $(AIPSCODE)/xmlcasa/idl

$(AIPSGCODE)/Python_Converter/casac_python.cc : 
	@ cd $(AIPSGCODE) ;\
	$(CCMTOOLSBIND)/ccmtools c++local c++python --overwrite --coda=$(AIPSXMLCODE)/xml/conversions.xml -o $(AIPSGCODE) -I$(AIPSGCODE) $(AIPSGCODE)/basicVecs.idl ;\
	$(CCMTOOLSBIND)/ccmtools c++local c++python --overwrite --coda=$(AIPSXMLCODE)/xml/conversions.xml -o $(AIPSGCODE) -I$(AIPSGCODE) $(AIPSGCODE)/casatypes.idl ;\
	$(CCMTOOLSBIND)/ccmtools c++local c++python --overwrite --coda=$(AIPSXMLCODE)/xml/conversions.xml -o $(AIPSGCODE) -I$(AIPSGCODE) $(AIPSGCODE)/complex.idl

$(AIPSARCH)/python/$(PYTHONVER)/casac.so : $(AIPSGCODE)/Python_Converter/casac_python.cc
	@ cd $(AIPSGCODE) ;\
	$(CCMTOOLSBIND)/ccmtools c++local c++python --overwrite --coda=$(AIPSXMLCODE)/xml/conversions.xml -o $(AIPSGCODE) -I$(AIPSGCODE) $(AIPSGCODE)/casa*.idl ;\
        mksetupdotpy.sh casac; \
        cd $(AIPSGCODE)/Python_Converter ; \
        $(PYTHON) setup.py build ; \
        amkdir $(AIPSARCH)/python/$(PYTHONVER) ; \
        cp build/lib*/casac.so $(AIPSARCH)/python/$(PYTHONVER)/casac.so

